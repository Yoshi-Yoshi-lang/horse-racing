<body>

    <canvas id="gameCanvas"></canvas>

    <div class="ui-layer">
        <div class="hud">
            <div class="score-box">
                <div id="modeDisplay" class="mode-label">ENDLESS</div>
                <div class="text-6xl font-black tracking-tighter" id="scoreDisplay">0</div>
                <div class="text-xs font-bold text-gray-400 tracking-widest mt-1">BEST: <span id="bestScoreDisplay">0</span></div>
            </div>
            <div class="timer-box hidden" id="timerDisplayBox">
                <div class="text-xs font-bold text-gray-400 tracking-widest mb-1">TIME</div>
                <div class="text-4xl font-bold text-white tracking-tight" id="timeDisplay">00.00</div>
            </div>
        </div>

        <div class="controls-hint">
            <div>LEFT <span class="text-xs">←</span></div>
            <div><span class="text-xs">→</span> RIGHT</div>
        </div>
    </div>

    <!-- スタート画面 -->
    <div id="startScreen" class="center-screen glass-panel">
        <h1 class="text-5xl title-gradient">ARROW<br>CLIMBER</h1>
        <p class="text-gray-400 text-sm mb-8 font-medium">Reflex & Speed Challenge</p>
        
        <div class="btn-group" id="startMenu">
            <button class="btn-modern btn-green" onclick="initGameSequence('ENDLESS')" onmouseenter="setMenuIndex(0)">
                <div class="btn-content">
                    <div class="btn-title">ENDLESS RUN</div>
                    <div class="btn-desc">無限に続く階段を駆け上がれ</div>
                </div>
                <div class="btn-icon">∞</div>
            </button>
            
            <button class="btn-modern btn-orange" onclick="initGameSequence('TIME30')" onmouseenter="setMenuIndex(1)">
                <div class="btn-content">
                    <div class="btn-title">30s SPRINT</div>
                    <div class="btn-desc">30秒間のタイムアタック</div>
                </div>
                <div class="btn-icon">⚡</div>
            </button>

            <button class="btn-modern btn-red" onclick="initGameSequence('TIME60')" onmouseenter="setMenuIndex(2)">
                <div class="btn-content">
                    <div class="btn-title">60s MARATHON</div>
                    <div class="btn-desc">60秒間の限界への挑戦</div>
                </div>
                <div class="btn-icon">⏱</div>
            </button>
        </div>
        
        <p class="text-xs text-gray-500 mt-6 font-mono">
            SELECT:<span class="key-badge">↑</span><span class="key-badge">↓</span> OK:<span class="key-badge">SPACE</span>
        </p>
    </div>

    <!-- ゲームオーバー画面 -->
    <div id="gameOverScreen" class="center-screen glass-panel hidden">
        <h2 class="text-3xl font-black mb-2 text-white tracking-tight" id="gameOverTitle">GAME OVER</h2>
        <p id="gameOverReason" class="text-sm mb-6 text-red-400 font-medium">Missed a step</p>
        
        <div class="bg-black/80 rounded-xl p-6 mb-6 border border-white/20 shadow-lg">
            <div class="text-xs text-gray-400 font-bold tracking-widest mb-2">FINAL SCORE</div>
            <div class="text-6xl font-black text-white tracking-tighter drop-shadow-md" id="finalScore">0</div>
        </div>

        <div class="btn-group" id="gameOverMenu">
            <button class="btn-modern btn-blue" id="retryBtn" onclick="retryGame()" onmouseenter="setMenuIndex(0)">
                <div class="btn-content">
                    <div class="btn-title">TRY AGAIN</div>
                    <div class="btn-desc">もう一度挑戦する</div>
                </div>
                <div class="btn-icon">↺</div>
            </button>
            
            <button class="btn-modern btn-gray" onclick="showStartScreen()" onmouseenter="setMenuIndex(1)">
                <div class="btn-content">
                    <div class="btn-title">BACK TO MENU</div>
                    <div class="btn-desc">タイトルに戻る</div>
                </div>
                <div class="btn-icon">☰</div>
            </button>
        </div>
        
        <p class="text-xs text-gray-500 mt-4 font-mono">
             SELECT:<span class="key-badge">↑</span><span class="key-badge">↓</span> OK:<span class="key-badge">SPACE</span>
        </p>
    </div>

    <script>
        // 設定
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        
        // ステータス
        let gameState = 'START'; // START, PLAYING, GAMEOVER
        let gameMode = 'ENDLESS'; // ENDLESS, TIME30, TIME60
        let score = 0;
        let timeLeft = 0;
        let menuIndex = 0; // メニュー選択用インデックス
        
        // ベストスコア管理
        let bestScores = {
            'ENDLESS': parseInt(localStorage.getItem('ac_best_endless') || 0),
            'TIME30': parseInt(localStorage.getItem('ac_best_time30') || 0),
            'TIME60': parseInt(localStorage.getItem('ac_best_time60') || 0)
        };
        
        // ゲームオブジェクト
        let stairs = [];
        let player = { x: 0, y: 0, direction: 0, displayX: 0, displayY: 0 };
        let cameraY = 0;
        let cameraX = 0;
        let effects = [];
        let touchEffects = [];

        // 定数
        const STEP_WIDTH = 60;
        const STEP_HEIGHT = 40;
        
        // Audio
        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        
        function playSound(type) {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            const osc = audioCtx.createOscillator();
            const gainNode = audioCtx.createGain();
            osc.connect(gainNode);
            gainNode.connect(audioCtx.destination);

            const now = audioCtx.currentTime;

            if (type === 'step') {
                osc.type = 'square';
                const baseFreq = 220; 
                const scale = [0, 2, 4, 5, 7, 9, 11, 12];
                const noteIndex = score % 8;
                const octave = Math.floor(score / 8) % 3;
                const freq = baseFreq * Math.pow(2, octave + scale[noteIndex]/12);
                
                osc.frequency.setValueAtTime(freq, now);
                gainNode.gain.setValueAtTime(0.05, now);
                gainNode.gain.exponentialRampToValueAtTime(0.001, now + 0.1);
                osc.start();
                osc.stop(now + 0.1);
            } else if (type === 'select') {
                // メニュー選択音
                osc.type = 'triangle';
                osc.frequency.setValueAtTime(400, now);
                gainNode.gain.setValueAtTime(0.1, now);
                gainNode.gain.exponentialRampToValueAtTime(0.001, now + 0.1);
                osc.start();
                osc.stop(now + 0.1);
            } else if (type === 'decide') {
                // 決定音
                osc.type = 'square';
                osc.frequency.setValueAtTime(600, now);
                osc.frequency.exponentialRampToValueAtTime(800, now + 0.1);
                gainNode.gain.setValueAtTime(0.1, now);
                gainNode.gain.exponentialRampToValueAtTime(0.001, now + 0.2);
                osc.start();
                osc.stop(now + 0.2);
            } else if (type === 'error') {
                osc.type = 'sawtooth';
                osc.frequency.setValueAtTime(100, now);
                osc.frequency.exponentialRampToValueAtTime(50, now + 0.4);
                gainNode.gain.setValueAtTime(0.3, now);
                gainNode.gain.linearRampToValueAtTime(0, now + 0.4);
                osc.start();
                osc.stop(now + 0.4);
            } else if (type === 'timeup') {
                osc.type = 'sine';
                osc.frequency.setValueAtTime(600, now);
                osc.frequency.linearRampToValueAtTime(300, now + 0.6);
                gainNode.gain.setValueAtTime(0.3, now);
                osc.start();
                osc.stop(now + 0.6);
            }
        }

        function init() {
            resize();
            window.addEventListener('resize', resize);
            window.addEventListener('keydown', handleInput);
            window.addEventListener('touchstart', handleTouch, {passive: false});
            
            // 初期メニュー選択状態更新
            updateMenuSelection();
            
            requestAnimationFrame(gameLoop);
        }

        function resize() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }

        // メニューの選択状態を更新する関数
        function updateMenuSelection() {
            const startButtons = document.querySelectorAll('#startMenu button');
            const gameOverButtons = document.querySelectorAll('#gameOverMenu button');
            
            // 全ての選択状態をリセット
            [...startButtons, ...gameOverButtons].forEach(btn => btn.classList.remove('btn-selected'));
            
            if (gameState === 'START') {
                if (startButtons[menuIndex]) {
                    startButtons[menuIndex].classList.add('btn-selected');
                }
            } else if (gameState === 'GAMEOVER') {
                if (gameOverButtons[menuIndex]) {
                    gameOverButtons[menuIndex].classList.add('btn-selected');
                }
            }
        }
        
        // マウスオーバーでインデックスを更新
        function setMenuIndex(index) {
            menuIndex = index;
            updateMenuSelection();
        }

        function showStartScreen() {
            document.getElementById('gameOverScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
            gameState = 'START';
            menuIndex = 0;
            updateMenuSelection();
            
            // カメラ位置リセット
            player.index = 0;
            cameraY = 0;
            cameraX = 0;
        }

        function initGameSequence(mode) {
            playSound('decide');
            gameMode = mode;
            resetGame();
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('gameOverScreen').classList.add('hidden');
            
            gameState = 'PLAYING';
        }

        function retryGame() {
            initGameSequence(gameMode);
        }

        function resetGame() {
            score = 0;
            stairs = [];
            
            if (gameMode === 'TIME30') timeLeft = 30;
            else if (gameMode === 'TIME60') timeLeft = 60;
            else timeLeft = 0;
            
            document.getElementById('modeDisplay').innerText = gameMode.replace('TIME', 'TIME ATTACK ') + (gameMode === 'ENDLESS' ? '' : 's');
            document.getElementById('bestScoreDisplay').innerText = bestScores[gameMode];
            
            if (gameMode !== 'ENDLESS') {
                document.getElementById('timerDisplayBox').classList.remove('hidden');
            } else {
                document.getElementById('timerDisplayBox').classList.add('hidden');
            }

            stairs.push({ x: 0, y: 0, direction: Math.random() > 0.5 ? 1 : -1 });
            
            for (let i = 0; i < 30; i++) {
                addStair();
            }

            player = {
                index: 0,
                displayX: 0,
                displayY: 0,
                rotation: 0
            };
            
            cameraY = 0;
            cameraX = 0;
            effects = [];
            touchEffects = [];
            
            updateUI();
        }

        function addStair() {
            const lastStair = stairs[stairs.length - 1];
            let nextDir;
            const rand = Math.random();
            if (rand > 0.5) {
                nextDir = lastStair.direction;
            } else {
                nextDir = lastStair.direction === 1 ? -1 : 1;
            }

            stairs.push({
                x: lastStair.x + (nextDir * STEP_WIDTH),
                y: lastStair.y - STEP_HEIGHT,
                direction: nextDir 
            });
        }

        function addTouchEffect(x, y) {
            touchEffects.push({
                x: x,
                y: y,
                r: 0,
                life: 1.0
            });
        }

        function gameOver(reason, isTimeUp = false) {
            gameState = 'GAMEOVER';
            
            if (isTimeUp) playSound('timeup');
            else playSound('error');

            if (score > bestScores[gameMode]) {
                bestScores[gameMode] = score;
                let storageKey = 'ac_best_' + gameMode.toLowerCase();
                localStorage.setItem(storageKey, score);
            }

            document.getElementById('finalScore').innerText = score;
            
            const titleEl = document.getElementById('gameOverTitle');
            const reasonEl = document.getElementById('gameOverReason');
            
            if (isTimeUp) {
                titleEl.innerText = "TIME UP!";
                titleEl.className = "text-3xl font-black mb-2 text-yellow-400 tracking-tight";
                reasonEl.innerText = "FINISH!";
            } else {
                titleEl.innerText = "GAME OVER";
                titleEl.className = "text-3xl font-black mb-2 text-red-500 tracking-tight";
                reasonEl.innerText = reason;
            }

            document.getElementById('gameOverScreen').classList.remove('hidden');
            
            // メニュー初期位置 (RETRY)
            menuIndex = 0;
            updateMenuSelection();
        }

        function handleInput(e) {
            // メニュー操作 (スタート画面)
            if (gameState === 'START') {
                const maxIndex = 2; // ボタン数-1
                if (e.code === 'ArrowUp') {
                    menuIndex = Math.max(0, menuIndex - 1);
                    playSound('select');
                    updateMenuSelection();
                    e.preventDefault();
                } else if (e.code === 'ArrowDown') {
                    menuIndex = Math.min(maxIndex, menuIndex + 1);
                    playSound('select');
                    updateMenuSelection();
                    e.preventDefault();
                } else if (e.code === 'Space' || e.code === 'Enter') {
                    // 決定
                    const modes = ['ENDLESS', 'TIME30', 'TIME60'];
                    initGameSequence(modes[menuIndex]);
                    e.preventDefault();
                }
                return;
            }

            // メニュー操作 (ゲームオーバー画面)
            if (gameState === 'GAMEOVER') {
                const maxIndex = 1; // ボタン数-1 (Retry, Menu)
                
                if (e.code === 'ArrowUp') {
                    menuIndex = Math.max(0, menuIndex - 1);
                    playSound('select');
                    updateMenuSelection();
                    e.preventDefault();
                } else if (e.code === 'ArrowDown') {
                    menuIndex = Math.min(maxIndex, menuIndex + 1);
                    playSound('select');
                    updateMenuSelection();
                    e.preventDefault();
                } else if (e.code === 'Space' || e.code === 'Enter' || e.code === 'KeyR') {
                    // 決定 (Rキーはリトライショートカットとして残す)
                    if (e.code === 'KeyR') {
                        retryGame();
                    } else if (menuIndex === 0) {
                        retryGame();
                    } else {
                        showStartScreen();
                    }
                    e.preventDefault();
                }
                return;
            }
            
            // ゲームプレイ中
            if (gameState !== 'PLAYING') return;
            
            if (e.code === 'ArrowLeft') {
                movePlayer(-1);
            } else if (e.code === 'ArrowRight') {
                movePlayer(1);
            }
        }

        function handleTouch(e) {
            if (e.target.closest('button')) return;
            
            if (gameState === 'GAMEOVER') {
                // タップでリトライ（簡易操作用）
                retryGame();
                return;
            }

            if (gameState !== 'PLAYING') return;
            e.preventDefault();
            
            const touchX = e.touches[0].clientX;
            const touchY = e.touches[0].clientY;
            const halfWidth = window.innerWidth / 2;

            addTouchEffect(touchX, touchY);
            
            if (touchX < halfWidth) {
                movePlayer(-1);
            } else {
                movePlayer(1);
            }
        }

        function movePlayer(inputDir) {
            const currentStair = stairs[player.index];
            const nextStair = stairs[player.index + 1];
            const correctDir = (nextStair.x > currentStair.x) ? 1 : -1;

            if (inputDir === correctDir) {
                score++;
                player.index++;
                addStair();
                playSound('step');
                createParticles(nextStair.x, nextStair.y, inputDir);
            } else {
                gameOver("FALL DOWN", false);
            }
        }

        function createParticles(x, y, dir) {
            for(let i=0; i<8; i++) {
                effects.push({
                    x: x,
                    y: y,
                    vx: (Math.random() - 0.5) * 8 + (dir * 3),
                    vy: (Math.random() - 0.5) * 8 - 3,
                    life: 1.0,
                    color: `hsl(${Math.random()*60 + 180}, 100%, 70%)`
                });
            }
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        let lastTime = Date.now();
        function update() {
            const now = Date.now();
            const dt = (now - lastTime) / 1000;
            lastTime = now;

            if (gameState === 'PLAYING') {
                if (gameMode !== 'ENDLESS') {
                    timeLeft -= dt;
                    if (timeLeft <= 0) {
                        timeLeft = 0;
                        gameOver("Time Up", true);
                    }
                }

                const targetCamY = -stairs[player.index].y + canvas.height * 0.65;
                cameraY += (targetCamY - cameraY) * 0.15; 

                const targetCamX = stairs[player.index].x;
                cameraX += (targetCamX - cameraX) * 0.15;

                const targetX = stairs[player.index].x;
                const targetY = stairs[player.index].y;
                player.displayX += (targetX - player.displayX) * 0.4;
                player.displayY += (targetY - player.displayY) * 0.4;
                
                player.rotation = (player.displayX - targetX) * 2; 
            }
            
            updateEffects();
            updateUI();
        }

        function updateEffects() {
            for (let i = effects.length - 1; i >= 0; i--) {
                let p = effects[i];
                p.x += p.vx;
                p.y += p.vy;
                p.life -= 0.05;
                if (p.life <= 0) effects.splice(i, 1);
            }
            for (let i = touchEffects.length - 1; i >= 0; i--) {
                let t = touchEffects[i];
                t.r += 2;
                t.life -= 0.05;
                if (t.life <= 0) touchEffects.splice(i, 1);
            }
        }

        function updateUI() {
            document.getElementById('scoreDisplay').innerText = score;
            
            if (gameMode !== 'ENDLESS') {
                const t = Math.max(0, timeLeft);
                const sec = Math.floor(t);
                const ms = Math.floor((t - sec) * 100);
                const el = document.getElementById('timeDisplay');
                el.innerText = sec.toString().padStart(2, '0') + "." + ms.toString().padStart(2, '0');
                
                if (t < 5) {
                    el.classList.remove('text-white');
                    el.classList.add('text-red-500');
                } else {
                    el.classList.add('text-white');
                    el.classList.remove('text-red-500');
                }
            }
        }

        function draw() {
            const timeCycle = (score * 0.5) % 360; 
            const topColor = `hsl(${220 + timeCycle}, 60%, 15%)`;
            const bottomColor = `hsl(${200 + timeCycle}, 50%, 30%)`;

            const grad = ctx.createLinearGradient(0, 0, 0, canvas.height);
            grad.addColorStop(0, topColor);
            grad.addColorStop(1, bottomColor);
            ctx.fillStyle = grad;
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            for(let t of touchEffects) {
                ctx.strokeStyle = `rgba(255, 255, 255, ${t.life * 0.5})`;
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.arc(t.x, t.y, t.r, 0, Math.PI * 2);
                ctx.stroke();
            }

            ctx.save();
            ctx.translate(canvas.width / 2 - cameraX, cameraY);

            const startIdx = Math.max(0, player.index - 15);
            const endIdx = Math.min(stairs.length, player.index + 25);

            for (let i = startIdx; i < endIdx; i++) {
                const s = stairs[i];
                const isPassed = i < player.index;
                
                ctx.fillStyle = isPassed ? '#334155' : '#38bdf8'; 
                if (i === player.index) ctx.fillStyle = '#fbbf24'; 

                ctx.beginPath();
                ctx.rect(s.x - STEP_WIDTH/2, s.y, STEP_WIDTH, STEP_HEIGHT);
                ctx.fill();
                
                ctx.fillStyle = isPassed ? '#1e293b' : '#0284c7';
                if (i === player.index) ctx.fillStyle = '#d97706';
                ctx.beginPath();
                ctx.rect(s.x - STEP_WIDTH/2, s.y + STEP_HEIGHT, STEP_WIDTH, 15);
                ctx.fill();
            }

            ctx.save();
            ctx.translate(player.displayX, player.displayY + STEP_HEIGHT/2);
            
            ctx.fillStyle = '#ffffff';
            ctx.shadowColor = 'rgba(255, 255, 255, 0.8)';
            ctx.shadowBlur = 15;
            
            ctx.beginPath();
            const size = 15;
            ctx.moveTo(0, -size * 1.5);
            ctx.lineTo(size, 0);
            ctx.lineTo(size * 0.5, 0);
            ctx.lineTo(size * 0.5, size * 1.5);
            ctx.lineTo(-size * 0.5, size * 1.5);
            ctx.lineTo(-size * 0.5, 0);
            ctx.lineTo(-size, 0);
            ctx.closePath();
            ctx.fill();

            ctx.restore();

            for (let p of effects) {
                ctx.globalAlpha = p.life;
                ctx.fillStyle = p.color;
                ctx.beginPath();
                ctx.arc(p.x, p.y, 4, 0, Math.PI*2);
                ctx.fill();
            }
            ctx.globalAlpha = 1.0;

            ctx.restore();
        }

        init();

    </script>
</body>
</html>
