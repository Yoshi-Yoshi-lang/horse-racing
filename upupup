            border-radius: 12px;
            text-align: left;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: space-between;
            pointer-events: auto;
        }

        .btn-modern:hover {
            background: rgba(30, 41, 59, 0.9);
            transform: translateY(-2px);
            border-color: rgba(255, 255, 255, 0.4);
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
        }
        
        /* キーボード選択時のスタイル */
        .btn-selected {
            background: rgba(255, 255, 255, 0.15) !important;
            border-color: rgba(255, 255, 255, 0.8) !important;
            transform: translateY(-2px);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
        }
        
        .btn-modern:active {
            transform: translateY(0);
        }

        .btn-content {
            display: flex;
            flex-direction: column;
        }
        .btn-title {
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 0.02em;
        }
        .btn-desc {
            font-size: 0.75rem;
            color: rgba(255,255,255,0.5);
            margin-top: 2px;
        }
        .btn-icon {
            font-size: 1.5rem;
            opacity: 0.8;
        }

        .btn-modern::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: #fff;
            opacity: 0.5;
        }
        .btn-green::before { background: #22c55e; }
        .btn-orange::before { background: #f97316; }
        .btn-red::before { background: #ef4444; }
        .btn-blue::before { background: #3b82f6; }
        .btn-gray::before { background: #94a3b8; }

        .title-gradient {
            background: linear-gradient(135deg, #60a5fa, #c084fc);
            -webkit-background-clip: text;
